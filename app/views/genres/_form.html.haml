%td{colspan: 3}
  = form_for object, url: object.new_record? ? genres_path : genre_path(object),
                     remote: true, html: {class: "form-horizontal"} do |f|

    -if object.errors.any?
      #error_explanation
        %h2
          =pluralize(object.errors.count, "error") + "prohibited this " + object.class.to_s + " from being saved:"

        %ul
          -object.errors.full_messages.each do |message|
            %li= message



    %p
      Name:
      = f.text_field :name

    %p
      Parent genre:
      = collection_select(:genre, :parent_genre, Genre.all, :id, :name,
      {:include_blank => 'None', :selected => object.parent_genre ? object.parent_genre.id : nil})


    = f.submit "Save", class: "btn btn-primary"
    %button.btn.btn-link.cancel Cancel
