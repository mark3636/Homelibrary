%td{colspan: 6}
  = form_for object, url: object.new_record? ? friends_path : friend_path(object),
                     remote: true, html: {class: "form-horizontal"} do |f|
    %p
      Full name:
      = f.text_field :full_name

    %p
      Email:
      = f.email_field :email

    %p
      Phone number:
      = f.telephone_field :phone_number

    %p
      Social profile:
      = f.text_field :social_profile

    %p
      Comment:
      = f.text_area :comment


    = f.submit "Save", class: "btn btn-primary"
    %button.btn.btn-link.cancel Cancel
