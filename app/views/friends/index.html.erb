<div class="page-header">
  <h1>Friends</h1>
</div>

<%= link_to 'New Friend', new_friend_path %><br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Phone number</th>
      <th>Social profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.social_profile %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
