<div class="page-header">
  <h1>Publishing Houses</h1>
</div>

<%= link_to 'New Publishing House', new_publishing_house_path %>

<br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishing_houses.each do |publishing_house| %>
      <tr>
        <td><%= publishing_house.name %></td>
        <td><%= link_to 'Show', publishing_house %></td>
        <td><%= link_to 'Edit', edit_publishing_house_path(publishing_house) %></td>
        <td><%= link_to 'Destroy', publishing_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
