<h1>Books</h1>

<%= link_to new_book_path, class: 'btn' do %>
  <i class="glyphicon glyphicon-plus"></i> New Book
<% end %>
<br><br>



<table class="table table-striped sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-xs'  %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= will_paginate @books %>
